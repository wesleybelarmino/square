<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movies_list_item_card"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_margin="5dp"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    >

  <ImageView
      android:id="@+id/movies_list_item_poster"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

    <TextView
        android:id="@+id/movies_list_item_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:padding="2dp"
        android:text="Lorem ipsum lobortis donec commodo vehicula fermentum maecenas ipsum mi metus"
        android:layout_gravity="bottom|center_horizontal"
        />

</android.support.v7.widget.CardView>
