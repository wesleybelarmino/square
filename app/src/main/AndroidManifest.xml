<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.square">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".SquareApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:largeHeap="true"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <meta-data
        android:name="com.app.square.util.GlideConfiguration"
        android:value="GlideModule"/>

    <activity
        android:name=".movies.MoviesActivity"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".moviedetail.MovieDetailActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity android:name=".moviesfav.MoviesFav">
    </activity>
  </application>

</manifest>